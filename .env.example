# ===================================
# Discord Bot - Environment Configuration
# ===================================

# ===== REQUIRED: LLM API (via nate_api_substrate) =====
# Architecture: Discord Bot → nate_api_substrate → (Grok API OR Ollama Cloud)
# nate_api_substrate handles personality, memory, and knowledge graph
# It must be running locally or on a server before starting the bot
#
# The substrate can use either:
# - xAI Grok: grok-4-1-fast-reasoning, grok-4-1-thinking
# - Ollama Cloud: kimi-k2-thinking:cloud, deepseek-r1-distill-qwen:cloud,
#                 deepseek-r1-distill-llama:cloud, qwen-2.5-coder:cloud
# Configure the LLM provider in nate_api_substrate's .env (USE_OLLAMA=true/false)
# This Discord bot just passes the model name - the substrate handles the API calls
GROK_BASE_URL=http://localhost:8284  # URL where nate_api_substrate is running (default port: 8284)
GROK_SESSION_ID=discord-bot          # Session ID for memory persistence in nate_api_substrate
GROK_MODEL=kimi-k2-thinking:cloud    # Model name to use
                                      # Examples:
                                      # - grok-4-1-fast-reasoning (xAI Grok - fast, general purpose)
                                      # - grok-4-1-thinking (xAI Grok - slower, deeper reasoning)
                                      # - kimi-k2-thinking:cloud (Ollama - 128K context, reasoning)
                                      # - deepseek-r1-distill-qwen:cloud (Ollama - distilled reasoning)
                                      # - deepseek-r1-distill-llama:cloud (Ollama - distilled reasoning)
GROK_MAX_TOKENS=8192                 # Max tokens per response (default: 8192) - higher = longer responses
GROK_API_TIMEOUT_MS=300000           # API timeout: 300000ms = 5 minutes

# ===== REQUIRED: Discord =====
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_main_channel_id

# ===== REQUIRED: Bot Behavior =====
USE_SENDER_PREFIX=true  # Include sender name in message context
SURFACE_ERRORS=true
RESPOND_TO_DMS=true
RESPOND_TO_MENTIONS=true
RESPOND_TO_BOTS=false
RESPOND_TO_GENERIC=false
TIMEZONE=America/New_York  # Use IANA timezone format (e.g., America/New_York, America/Chicago, America/Los_Angeles, Europe/London)
LOCALE=en-US  # Date/time formatting locale (e.g., en-US, de-DE, fr-FR, es-ES)

# ===== OPTIONAL: Autonomous Mode =====
ENABLE_AUTONOMOUS=false
ENABLE_TIMER=false

# ===== OPTIONAL: Admin Commands =====
ADMIN_USER_ID=your_discord_user_id_here

# ===== OPTIONAL: DM Restriction =====
ALLOWED_DM_USER_ID=

# ===== OPTIONAL: Additional Channels =====
HEARTBEAT_LOG_CHANNEL_ID=
TASKS_CHANNEL_ID=
MIDJOURNEY_CHANNEL_ID=

# ===== OPTIONAL: Spotify Integration =====
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REFRESH_TOKEN=

# ===== OPTIONAL: Weather Integration =====
OPENWEATHER_API_KEY=
WEATHER_CITY=Munich
WEATHER_COUNTRY_CODE=de
WEATHER_LANGUAGE=de
WEATHER_CITY_DISPLAY=München

# ===== OPTIONAL: GIF Integration =====
TENOR_API_KEY=

# ===== OPTIONAL: Bot Language =====
BOT_LANGUAGE=en

# ===== OPTIONAL: Voice Features =====
# ElevenLabs - Text-to-Speech (outgoing voice messages)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL_ID=eleven_v3

# OpenAI Whisper - Voice Note Transcription (incoming voice messages)
OPENAI_API_KEY=

# ===== OPTIONAL: Server Configuration =====
PORT=3001

# ===== OPTIONAL: Conversation Logging =====
# REQUIRED for heartbeat context (last 3 conversation turns)
# If disabled, heartbeats won't have recent conversation context
ENABLE_CONVERSATION_LOGGING=true
CONVERSATION_LOGS_DIR=

# ===== OPTIONAL: Stats Script =====
STATS_SCRIPT_PATH=
